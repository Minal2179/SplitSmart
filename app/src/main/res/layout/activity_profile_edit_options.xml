<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_edit_options">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:text="Edit Information"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="148dp"
            android:text="Name :"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/Contact1"
            android:layout_alignStart="@+id/textView3"
            android:text="Contact :"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_centerVertical="true"
            android:text="Email :"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="184dp" />

        <EditText
            android:id="@+id/Contact1"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Name1"
            android:layout_marginTop="199dp"
            android:background="@drawable/border_xml"
            android:ems="10"
            android:hint="Contact No."
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:text=""
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="234dp" />

        <EditText
            android:id="@+id/Email1"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/Contact1"
            android:layout_centerVertical="true"
            android:background="@drawable/border_xml"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:text=""
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="189dp" />

        <EditText
            android:id="@+id/Name1"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/EditInfo"
            android:background="@drawable/border_xml"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:text=""
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="141dp" />

        <Button
            android:id="@+id/EditInfo"
            android:layout_width="361dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="191dp"
            android:background="@color/colorPrimary"
            android:text="Save"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="293dp" />



        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu">


            </android.support.design.widget.BottomNavigationView>
        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>